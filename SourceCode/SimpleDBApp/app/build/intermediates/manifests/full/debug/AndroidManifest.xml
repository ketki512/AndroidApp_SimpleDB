<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.simpledb.info"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/mainlogo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.simpledb.info.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.simpledb.info.MainActivity"
            android:label="Login" >
        </activity>
        <activity
            android:name="com.simpledb.info.StoreActivity"
            android:label="Register" >
        </activity>
        <activity
            android:name="com.simpledb.info.GetActivity"
            android:label="@string/title_activity_get" >
        </activity>
        <activity
            android:name="com.simpledb.info.EventActivity"
            android:label="Add Event" >
        </activity>
        <activity
            android:name="com.simpledb.info.FeedActivity"
            android:label="Events" >
        </activity>
    </application>

</manifest>